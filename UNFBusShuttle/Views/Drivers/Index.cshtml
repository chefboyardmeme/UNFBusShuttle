            <td>
                @Html.DisplayFor(modelItem => item.busNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.schedId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lName)
            </td>
