@model IEnumerable<UNFBusShuttle.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.depTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arrTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adminCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.depTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adminCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.schedId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.schedId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.schedId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
